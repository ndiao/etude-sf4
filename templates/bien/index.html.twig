{% extends "base.html.twig" %}

{% block title %}Bienvenue dans le catalogue des biens{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-3">
                        {{ form_row(form.surfaceMin) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.prixMax) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.categories) }}
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            {{ form_end(form)}}
        </div>
    </div>
    <div class="container">
        <h1>Liste des biens immobiliers en vente</h1>
        <div class="row">
            {% for bien in biens_en_vente %}
                <div class="col-md-4">
                    {% include "bien/_bien.html.twig" %}
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(biens_en_vente) }}
        </div>
    </div>
{% endblock %}